%h2 Log in
- form_for :user do |form|
  %fieldset
    %legend Enter Your Details
    
    .form_row
      %label{ 'for' => "screen_name"} Screen name:
      = form.text_field :screen_name, :size => User::SCREEN_NAME_SIZE, :maxlength => User::SCREEN_NAME_MAX_LENGTH
      %br/
        
    .form_row
      %label{ 'for' => "password"} Password:
      = form.password_field :password, :size => User::PASSWORD_SIZE, :maxlength => User::PASSWORD_MAX_LENGTH
      %br/
    
    .form_row
      %label{ 'for' => "remember_me", } Remember Me?
      = form.check_box :remember_me
      
    .form_row
      = submit_tag "Login!", :class => "submit"

%p 
  Not a member? 
  = link_to "Register Now!", :action => 'register'