%h2 Register
- form_for :user do |form|
  %fieldset
    %legend Enter Your Details
    
    = error_messages_for "user"
    = render :partial => "screen_name_field_row", :locals => { :form => form }
    %br/
    
    = render :partial => "email_field_row", :locals => { :form => form }
    %br/
    
    = render :partial => "password_field_row", :locals => { :form => form, :field => "password", :field_title => "Password:" }
    %br/
    = render :partial => "password_field_row", :locals => { :form => form, :field => "password_confirmation", :field_title => "Confirm:" }
    %br/
    
    .form_row
      = submit_tag "Register!", :class => "submit"
      